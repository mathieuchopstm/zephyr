if SOC_FAMILY_STM32

config CLOCK_MANAGEMENT_STM32
	bool
	default y
	select USE_STM32_LL_UTILS
	help
	  Hidden symbol to enable common clock management code for STM32 family.

config CLOCK_MANAGEMENT_STM32_INLINE
	bool "Inline STM32 register accessors"
	default n
	help
	  Controls whether the STM32 register accessors are inlined in all drivers,
	  or implemented as functions in a single file called by other drivers.

config CLOCK_MANAGEMENT_STM32_BUS_PRESCALER
	bool "STM32 bus prescaler driver"
	default y
	depends on DT_HAS_ST_STM32_BUS_PRESCALER_ENABLED
	help
	  Driver for STM32 bus clock prescalers

config CLOCK_MANAGEMENT_STM32_CLOCK_GATE
	bool "STM32 clock gate"
	default y
	depends on DT_HAS_ST_STM32_CLOCK_GATE_ENABLED
	help
	  Driver for STM32 clock gates

config CLOCK_MANAGEMENT_STM32_CLOCK_GENERATOR
	bool "STM32 internal clock generator"
	default y
	depends on DT_HAS_ST_STM32_CLOCK_GENERATOR_ENABLED
	help
	  Driver for STM32 internal clock generators

config CLOCK_MANAGEMENT_STM32_CLOCK_MULTIPLEXER
	bool "STM32 clock multiplexer"
	default y
	depends on DT_HAS_ST_STM32_CLOCK_MULTIPLEXER_ENABLED
	help
	  Driver for STM32 clock multiplexers

config CLOCK_MANAGEMENT_STM32_INTERNAL_CLKGEN
	bool "STM32 internal clock generators driver"
	default y
	depends on DT_HAS_ST_STM32_INTERNAL_CLKGEN_ENABLED
	help
	  Driver for STM32 clock generators

	  This driver supports HSE, HSI, LSE and LSI.

config CLOCK_MANAGEMENT_STM32_SYSCLK_PRESCALER
	bool "STM32 SYSCLK prescaler driver"
	default y
	depends on DT_HAS_ST_STM32_SYSCLK_PRESCALER_ENABLED
	help
	  Driver for STM32 SYSCLK prescaler

config CLOCK_MANAGEMENT_STM32_TIMER_FREQMUL
	bool "STM32 timer frequency multiplier driver"
	default y
	depends on DT_HAS_ST_STM32_TIMER_FREQMUL_ENABLED
	help
	  Driver for STM32 timer frequency multiplier

config CLOCK_MANAGEMENT_STM32C0_HSISYS_DIV
	bool "STM32C0 HSISYS divider driver"
	default y
	depends on DT_HAS_ST_STM32C0_HSISYS_DIV_ENABLED
	help
	  Driver for STM32C0 HSISYS divider

endif # SOC_FAMILY_STM32
